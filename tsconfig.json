{
  "compilerOptions": {
    "paths": {
      "*": [
        "types/*"
      ]
    },
    "outDir": "build/dist",
    "module": "es2015",
    "target": "es2015",
    "lib": [
      "dom",
      "es2016",
      "es2017.object"
    ],
    "baseUrl": ".",
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDirs": [
      "src",
      "stories"
    ],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "typeRoots": [
    "../node_modules/@types",
    "../@types"
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}